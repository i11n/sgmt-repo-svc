{
  "name": "sgmt-repo-svc",
  "description": "Repo services for the sgmt project",
  "version": "0.0.0",
  "author": "integereleven",
  "license": "MIT",
  "status": "unstable",
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "include": [
        "ban-untagged-todo",
        "camelcase",
        "default-param-last",
        "eqeqeq",
        "explicit-function-return-type",
        "explicit-module-boundary-types",
        "no-throw-literal"
      ]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "**/*.json"],
  "exclude": ["**/vendor/**", "**/build/**"],
  "fmt": {
    "indentWidth": 2,
    "lineWidth": 80,
    "proseWrap": "preserve",
    "useTabs": false,
    "singleQuote": true,
    "semiColons": true
  },
  "tasks": {
    "bump-version": "deno run -A ./src/cli/bump_version.ts",
    "commit": "deno run -A ./src/cli/commit.ts",
    "pre-commit": "deno fmt && deno lint && deno test && deno doc ./mod.ts --json > _doc.json",
    "cache": "deno cache --reload --lock=deno.lock --lock-write deps.ts"
  }
}
